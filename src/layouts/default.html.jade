- var styles = getBlock('styles').add(site.styles).add(document.styles).toHTML()
- var scripts = getBlock('scripts').add(site.scripts).add(document.scripts).toHTML()
- var meta = getBlock('meta').toHTML()
- var pageTitle = getPreparedTitle()
- var pageDescription = getPreparedDescription()
- var pageKeywords = getPreparedKeywords()
- var author = site.author

doctype html
html.no-js(lang="en")
head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title!= pageTitle
    meta(name="description", content=! pageDescription)
    meta(name="keywords", content!= pageKeywords)
    meta(name="author", content!= author)
    != meta
    link(rel="shortcut icon", href="../favicon.ico")
    != styles
    script(src="scripts/modernizr_custom.js")
  body
    .container
      #mp-pusher.mp-pusher
        != partial('menu.html.jade')
        .scroller
          .scroller-inner
            a#trigger.menu-trigger(href="#") Menu
            != content
    != scripts
